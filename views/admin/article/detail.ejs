<!-- header -->
<%- include('../partial/header.ejs') %>

<body>
<div class="wrapper">
    <!-- sidebar -->
    <%- include('../partial/left-menu.ejs') %>
    <div class="main">
        <!-- nav-bar -->
        <%- include('../partial/nav-bar.ejs') %>
        <main class="content">
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-12 col-xl-9">
                        <div class="card">
                            <div class="card-body">
                                <h1>ARTICLE DETAIL</h1>

                                <div class="mb-3">
                                    <label class="form-label"><strong>Article Title</strong></label>
                                    <input type="text" class="form-control" placeholder="Title" name="name"
                                           value="<%= item.name %>">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label"><strong>Type of calligraphy</strong></label>
                                    <input type="text" class="form-control" placeholder="Title" name="category"
                                           value="<%= item.category %>">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label"><strong>Content of the article</strong></label>
                                    <div class="row">
                                        <%- item.articleDetail%>
                                    </div>
                                </div>
                                <form action="#" method="post">
                                    <div class="card-footer">
                                        <a href="/admin/article/edit?id=<%= item._id %>">
                                            <button type="button" class="btn btn-primary">Edit</button>
                                        </a>
                                        <a href="/admin/article">
                                            <button type="button" class="btn btn-dark float-right">Back to list</button>
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- footer -->
        <%- include('../partial/footer.ejs') %>
    </div>
</div>
<!-- js -->
<%- include('../partial/js.ejs') %>
</body>

</html>