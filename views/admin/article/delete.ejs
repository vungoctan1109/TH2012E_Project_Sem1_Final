<!-- header -->
<%-include('../partial/header.ejs')%>
<body>
<div class="wrapper">
    <!-- sidebar -->
    <%-include('../partial/left-menu.ejs')%>
    <div class="main">
        <!-- nav-bar -->
        <%-include('../partial/nav-bar.ejs')%>
        <main class="content">
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-12 col-xl-6">
                        <div class="card">
                            <div class="card-body">
                                <h1>DELETE AN ARTICLE</h1>
                                <form action="/admin/article/delete?id=<%=item._id%>" method="post">
                                    <div class="mb-3">
                                        <label class="form-label">Article Title</label>
                                        <input type="text" class="form-control" placeholder="Title" name="name" value="<%=item.name%>">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Type of calligraphy</label>
                                        <input type="text" class="form-control" placeholder="Title" name="category" value="<%=item.category%>">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Content of the article</label>
                                        <textarea style="min-height: 400px" class="form-control" placeholder="Enter..." rows="3" name="articleDetail"
                                                  spellcheck="false" ><%=item.articleDetail%></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-danger">Confirm</button>
                                    <a href="/admin/article">
                                        <button type="button" class="btn btn-dark float-right">Back to list</button>
                                    </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- footer -->
        <%-include('../partial/footer.ejs')%>
    </div>
</div>
<!-- js -->
<%-include('../partial/js.ejs')%>
</body>

</html>