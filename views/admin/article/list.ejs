<!-- header -->
<%- include('../partial/header.ejs') %>
<body>
<div class="wrapper">
    <!-- sidebar -->
    <%- include('../partial/left-menu.ejs') %>
    <div class="main">
        <!-- nav-bar -->
        <%- include('../partial/nav-bar.ejs') %>
        <main class="content">
            <div class="container-fluid p-0">
                <form action="/admin/article" method="get" name="seachForm">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="" for="inputEmail4">Danh mục</label>
                            <!--                                            danh muc san pham duoc lay ra tu bang categories-->
                            <select name="categoryId" id="categorySelect" class="form-control">
                                <% for(var i = 0; i < cate.length; i++) {
                                %>
                                    <option value="<%=cate[i]._id%>"><%=cate[i].name%></option>
                                <%
                                }%>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="example1_filter">Search</label>
                            <div id="example1_filter" class="dataTables_filter"><input class="form-control"
                                                                                       type="search"
                                                                                       aria-controls="example1"
                                                                                       name="keyword">
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row m-auto">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th style="width: 3%" class="text-center">STT</th>
                            <th style="width: 20%" class="text-center">Tên</th>
                            <th style="width: 10%" class="text-center">Thể Loại Thư Pháp</th>
                            <th style="width: 40%" class="text-center">Nội Dung Chi Tiết</th>
                            <th style="width: 14%" class="text-center">Create At</th>
                            <th style="width: 13%" class="text-center">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(var i = 0; i < list1.length; i++) {
                        %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= list1[i].name %></td>
                                <td><%= list1[i].category%></td>
                                <td><%= list1[i].articleDetail %></td>
                                <td><%= list1[i].createAt %></td>
                                <td>
                                    <a href="/admin/article/detail?id=<%= list1[i]._id %>" title="view detail">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                             viewBox="0 0 24 24"
                                             fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                             stroke-linejoin="round" class="feather feather-info align-middle mr-2">
                                            <circle cx="12" cy="12" r="10"></circle>
                                            <line x1="12" y1="16" x2="12" y2="12"></line>
                                            <line x1="12" y1="8" x2="12.01" y2="8"></line>
                                        </svg>
                                    </a>&nbsp;&nbsp;
                                    <a href="/admin/article/edit?id=<%= list1[i]._id %>" title="edit">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                             viewBox="0 0 24 24"
                                             fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                             stroke-linejoin="round" class="feather feather-edit align-middle mr-2">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                        </svg>
                                        <span class="align-middle"></span>
                                    </a>&nbsp;&nbsp;
                                    <a href="/admin/article/delete?id=<%= list1[i]._id %>" title="delete article">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                             viewBox="0 0 24 24"
                                             fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                             stroke-linejoin="round" class="feather feather-delete align-middle mr-2">
                                            <path d="M21 4H8l-7 8 7 8h13a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2z"></path>
                                            <line x1="18" y1="9" x2="12" y2="15"></line>
                                            <line x1="12" y1="9" x2="18" y2="15"></line>
                                        </svg>
                                    </a>
                                </td>
                            </tr>
                        <%
                        } %>
                        </tbody>
                        <tfoot>
                        <tr>
                            <th style="width: 3%" class="text-center">STT</th>
                            <th style="width: 20%" class="text-center">Tên</th>
                            <th style="width: 10%" class="text-center">Thể Loại Thư Pháp</th>
                            <th style="width: 40%" class="text-center">Nội Dung Chi Tiết</th>
                            <th style="width: 14%" class="text-center">Create At</th>
                            <th style="width: 13%" class="text-center">Action</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </main>
        <!-- footer -->
        <%- include('../partial/footer.ejs') %>
    </div>
</div>
<!-- js -->
<%- include('../partial/js.ejs') %>
</body>

</html>