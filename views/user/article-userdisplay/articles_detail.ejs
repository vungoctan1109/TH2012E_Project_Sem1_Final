<%- include('../partial/head.ejs') %>
<head>
    <link rel="stylesheet" href="/css/blog_detail.css">
    <title>Article Detail - Calligraphy</title>
    <style>
        section h1 {
            font-size: xx-large;
            font-family: 'Segoe UI",Arial,sans-serif;
        }
        section h3 {
            color: darkblue;
            font-size: large;
            font-family: 'Montserrat Alternates', sans-serif;
        }

    </style>
</head>
<body>
<%- include('../partial/sidebar.ejs') %>
<%- include('../partial/loader.ejs') %>
<button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-arrow-up"></i></button>
<main>
    <section>
        <div class="w3-row">
            <!-- Blog entries -->
            <div class="w3-col l8 s12">
                <!-- Blog entry -->
                <div class="w3-card-4 w3-margin w3-padding">
                    <div class="w3-container">
                        <div class="row">
                            <div class="post-detail"><!-- Nội dung blog -->
                                <div>
                                    <h1><%=item.name%></h1>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <h3 class="text-left"><%= moment(item.createAt).format('DD MMMM YYYY') %></h3>
                                        </div>
                                        <div class="col-lg-6">
                                            <h3 class="text-right"><%= item.category.name%></h3>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <%-item.articleDetail%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Introduction menu -->
            <div class="w3-col l4">
                <!-- About Card -->

                <!-- Posts -->
                <div class="w3-card w3-margin">
                    <div class="w3-container w3-padding">
                        <h4>Popular Posts</h4> <!-- Lấy 3 bài viết mới nhất -->
                    </div>
                    <ul class="w3-ul w3-hoverable ">
                        <%
                        for(var i = 2 ; i >= 0 ; i--) {
                        %>
                            <li class="w3-padding-16">
                                <a href="/article/detail?id=<%= list[i]._id %>">
                                    <img src="<%= list[i].thumnail %>" alt="Image" class="w3-left w3-margin-right img-fluid" style="width:75px">
                                    <span class=""><b><%= list[i].name %></b></span><br>
                                    <span style="font-style: italic"><%= moment(list[i].createAt).format('DD MMMM YYYY') %></span>
                                </a>
                            </li>
                        <%
                        } %>
                    </ul>
                </div>
                <!-- Labels / tags -->
            </div>
        </div>
        <br>
        </div>
    </section>
</main>
<%- include('../partial/footer.ejs') %>
<%- include('../partial/js.ejs') %>
<script src="/js/home.js"></script>
</body>
</html>