<%- include('../partial/head.ejs') %>
<head>
    <link rel="stylesheet" href="/css/blog_detail.css">
    <title><%= item.name %></title>
    <style>
        section h1 {
            font-size: xx-large;
            font-family: 'Segoe UI",Arial,sans-serif;
        }

        section h3 {
            color: darkblue;
            font-size: large;
            font-family: 'Montserrat Alternates', sans-serif;
        }

        .a-link {
            color: #2222a2;
            font-size: 18px;
            text-decoration: underline
        }
        .i-icon{
            color: #2222a2;
            font-size: 18px;
            margin-right: 9px;
            margin-top: 3px;
        }
        .h2-01{
            font-style: italic;
            font-family: "Poppins", sans-serif
            color: #8c0615;
        }

    </style>
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v10.0"
            nonce="usB5JJXB"></script>
</head>
<body>
<%- include('../partial/sidebar.ejs') %>
<%- include('../partial/loader.ejs') %>
<button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-arrow-up"></i></button>
<main>
    <section class="container-xl">
        <div class="row">
            <!-- Blog entries -->
            <!-- Blog entry -->
            <div class="w3-card-4 w3-padding col-lg-12" style="background: white">
                <div class="w3-container">
                    <div class="row">
                        <div class="post-detail"><!-- Ná»™i dung blog -->
                            <div>
                                <h1><%= item.name %></h1>
                                <div class="mt-3 mb-3">
                                    <div class="rw-ui-container mt-2 mb-3"></div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <h3 class="text-left"><%= moment(item.createAt).format('DD MMMM YYYY') %></h3>
                                    </div>
                                    <div class="col-lg-6 mb-3">
                                        <h3 class="text-right"><%= item.category.name %></h3>
                                    </div>
                                </div>
                                <div class="img-responsive">
                                    <img src="<%= item.thumnail %>" alt="" class="img-fluid mb-3">
                                </div>
                            </div>
                            <div>
                                <%- item.articleDetail %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ml-5 mt-5">
                <h2 class="h2-01">Related Articles For "<%=item.category.name%>"</h2>
                <%
                var lisLength =0;
                if (list.length <5){
                    lisLength =list.length;
                }else {
                    lisLength=5
                }
                %>
                <% for(var i = 0; i < lisLength; i++) {
                %>
                    <div class="row mb-4 mt-4">
                        <i class="fa fa-external-link i-icon" aria-hidden="true"></i>

                        <a class="a-link" href="/article/detail?id=<%= list[i]._id %>&categoryID=<%= list[i].category._id%>"><%= list[i].name %></a>
                    </div>
                <%
                } %>
            </div>
        </div>
        <br>
        </div>
        <div class="fb-comments" data-href="http://localhost:3000/article/detail?id=<%= item._id %>"
             data-width="800" data-numposts="3" data-order-by="reverse_time"></div>
    </section>
</main>
<%- include('../partial/footer.ejs') %>
<%- include('../partial/js.ejs') %>
