<%- include('../partial/head.ejs') %>
<head>
    <link rel="stylesheet" href="/css/blog_detail.css">
    <title>Articles - Calligraphy</title>
    <style>

        section h3 {
            font-size: small;
            font-family: sans-serif;
            color: black;
            font-weight: bold;
        }

        section .img-responsive {
            width: 100%;
            height: 250px;
            margin-bottom: 15px;
            border-radius: 5px;
            object-fit: cover;
            background-repeat: no-repeat;
            background-position: 50% 50%;
        }

        section .img-responsive:hover {
            opacity: 0.8;
        }
    </style>
</head>
<body>
<%- include('../partial/sidebar.ejs') %>
<%- include('../partial/loader.ejs') %>
<button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-arrow-up"></i></button>
<main>
    <section>
        <div class="w3-row">
            <!-- Blog entries -->
            <div class="w3-col l8 s12">
                <!-- Blog entry -->
                <div class="w3-card-4 w3-margin w3-padding">
                    <div class="w3-container">
                            <div class="post-detail"><!-- Ná»™i dung blog -->
                                <% for(var i = 0; i < list.length; i++) {
                                %>
                                    <div class="mt-4 " <%= list[i].category._id == curentCategoryID ? '' : 'hidden' %> >
                                        <div class="row">
                                            <div class="col-lg-5 img-responsive ">
                                                <a href="/article/detail?id=<%= list[i]._id %>"><img
                                                            class="img-responsive"
                                                            src="<%= list[i].thumnail %>" alt=""></a>
                                            </div>
                                            <div class="col-lg-7">
                                                <a href="/article/detail?id=<%= list[i]._id %>">
                                                    <h2><%= list[i].name %></h2></a>
                                                <p class="mb-2" style="font-style: italic"><%= moment(list[i].createAt).format('DD MMMM YYYY') %></p>
                                                <p style="font-weight: bold;font-size: 19px"><%= list[i].category.name %></p>
                                                <div class="article-summary mt-0">
                                                    <p><%- list[i].articleDetail%></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <%
                                } %>
                            </div>
                    </div>
                </div>
            </div>

            <!-- Introduction menu -->
            <div class="w3-col l4">
                <!-- About Card -->

                <!-- Posts -->
                <div class="w3-card w3-margin">
                    <div class="w3-container w3-padding">
                        <h4>Popular Posts</h4>
                    </div>
                    <ul class="w3-ul w3-hoverable ">
                        <%
                        for(var i = 2 ; i >= 0 ; i--) {
                        %>
                            <li class="w3-padding-16">
                                <a href="/article/detail?id=<%= list[i]._id %>">
                                    <img src="<%= list[i].thumnail %>" alt="Image" class="w3-left w3-margin-right img-fluid" style="width:75px">
                                    <span class=""><b><%= list[i].name %></b></span><br>
                                    <span style="font-style: italic"><%= moment(list[i].createAt).format('DD MMMM YYYY') %></span>
                                </a>
                            </li>
                            <%
                            } %>
                    </ul>
                </div>
                <!-- Labels / tags -->
            </div>
        </div>
        <br>
        </div>
    </section>
</main>
<%- include('../partial/footer.ejs') %>
<%- include('../partial/js.ejs') %>
<script src="/js/home.js"></script>
</body>
</html>